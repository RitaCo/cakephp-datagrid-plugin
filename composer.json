{
	"name": "ritaco/cakephp-datagrid-plugin",
	"type": "cakephp-plugin",
	"description": "A CakePHP plugin to easy create DataGrids in CakePHP with functionalities as: pagination, sorting, searching etc.",
	"keywords": ["cakephp", "cake3", "plugin", "DataGrid", "pagination", "table", "helper"],
	"homepage": "https://github.com/RitaCo/cakephp-datagrid-plugin",
	"license": "MIT",
	"support":{
		"source":"https://github.com/RitaCo/cakephp-datagrid-plugin",
		"issues":"https://github.com/RitaCo/cakephp-datagrid-plugin/issues"
	},
	"authors": [
		{
			"name": "saleh souzanchi",
			"email": "saleh.souzanchi@gmail.com",
			"homepage": "https://github.com/zoghal"
		}
	],
	"require": {
		"php": ">=5.4.0",
		"cakephp/plugin-installer": "*"
	},
	"require-dev": {
		"cakephp/cakephp": "3.0.*-dev",
		"phpunit/phpunit": "4.1.*"
	},
	"autoload": {
		"psr-4": {
			"DataGrid\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"DataGrid\\": "tests"
		}
	}

}
